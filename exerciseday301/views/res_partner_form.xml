<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="res_partner_form">
      <field name="name">res_partner_form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/><!--if we inherit must add this sentence-->      
      <field name="arch" type="xml">
        <xpath expr="//field[@name='mobile']" position="attributes" > 
          <attribute name="attrs">{'invisible': [('is_company','=', True)]}</attribute>        
        </xpath>
        <xpath expr="//page[@name='internal_notes']" position="after" >           
          <page name="signature" string="Signature" attrs="{'invisible': [('is_company','=', False)]}">
            <field name="signature" widget="signature"/>
          </page>
        </xpath>
        <xpath expr="//page[@name='internal_notes']" position="after" > 
          <page name="signature" string="Signature">
            <field name="signature" widget="signature"/>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>