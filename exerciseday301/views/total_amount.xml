<odoo>
    <data>
        <template id="total_amount">
          <t t-call='web.html_container' >
            <form action='/sale_total' method='post' class="container-fluid mt32" enctype="multipart/form-data" data-editable-form="false">
              <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
              Date: <input type="date" name='date' /><br/>              
              <button type="submit">Submit</button>
            </form>
          </t>
        </template>
    </data>
</odoo>